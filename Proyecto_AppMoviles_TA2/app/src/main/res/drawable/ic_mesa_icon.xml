<?xml version="1.0" encoding="utf-8"?>
<!-- Ícono mejorado para mesas en el RecyclerView -->
<vector xmlns:android="http://schemas.android.com/apk/res/android"
    android:width="80dp"
    android:height="80dp"
    android:viewportWidth="80"
    android:viewportHeight="80">
    
    <!-- Superficie de la mesa (rectángulo redondeado) -->
    <path
        android:fillColor="#8D6E63"
        android:pathData="M10,25 L70,25 Q75,25 75,30 L75,35 Q75,40 70,40 L10,40 Q5,40 5,35 L5,30 Q5,25 10,25 Z" />
    
    <!-- Borde superior (más oscuro) -->
    <path
        android:fillColor="#6D4C41"
        android:pathData="M10,25 L70,25 Q75,25 75,30 L75,32 L70,32 L10,32 L5,32 L5,30 Q5,25 10,25 Z" />
    
    <!-- Pata frontal izquierda -->
    <path
        android:fillColor="#5D4037"
        android:pathData="M15,40 L18,40 L18,70 Q18,72 16.5,72 Q15,72 15,70 Z" />
    
    <!-- Pata frontal derecha -->
    <path
        android:fillColor="#5D4037"
        android:pathData="M62,40 L65,40 L65,70 Q65,72 63.5,72 Q62,72 62,70 Z" />
    
    <!-- Pata trasera izquierda (perspectiva) -->
    <path
        android:fillColor="#4E342E"
        android:pathData="M20,35 L22,35 L20,65 Q20,66 19,66 Q18,66 18,65 Z" />
    
    <!-- Pata trasera derecha (perspectiva) -->
    <path
        android:fillColor="#4E342E"
        android:pathData="M58,35 L60,35 L62,65 Q62,66 61,66 Q60,66 60,65 Z" />
    
    <!-- Decoración: plato sobre la mesa -->
    <ellipse
        android:fillColor="#FFFFFF"
        cx="40"
        cy="32"
        rx="8"
        ry="3" />
    
    <!-- Borde del plato -->
    <ellipse
        android:fillColor="#E0E0E0"
        cx="40"
        cy="32"
        rx="6"
        ry="2" />
</vector>
