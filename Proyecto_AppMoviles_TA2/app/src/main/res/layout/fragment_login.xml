<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@color/gray_light"
    android:clipToPadding="false">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="24dp"
        android:paddingEnd="24dp"
        android:paddingBottom="16dp"
        android:paddingTop="16dp"
        android:gravity="top|center_horizontal">

        <!-- Restaurant Table Icon -->

        <Button
            android:id="@+id/btn_peruvianFlavor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="@drawable/button_purple"
            android:text="PERUVIAN FLAVOR"
            android:textColor="@color/white"
            android:textStyle="bold" />

        <ImageView
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="32dp"
            android:src="@drawable/ic_logo_restaurant"
            android:contentDescription="@string/restaurant_logo" />

        <!-- Login Title -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Login"
            android:textSize="32sp"
            android:textStyle="bold"
            android:textColor="@color/text_primary"
            android:layout_marginBottom="8dp" />

        <!-- Login Subtitle -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ingresa tu correo y Contraseña"
            android:textSize="16sp"
            android:textColor="@color/text_secondary"
            android:layout_marginBottom="40dp" />

        <!-- Email Input -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Email"
            android:textSize="16sp"
            android:textColor="@color/text_primary"
            android:layout_marginBottom="8dp" />

        <EditText
            android:id="@+id/etUsuario"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="@drawable/edittext_background"
            android:hint="utpestudiante@gmail.com"
            android:textColor="@color/text_primary"
            android:textColorHint="@color/gray_dark"
            android:paddingHorizontal="16dp"
            android:textSize="16sp"
            android:inputType="textEmailAddress"
            android:layout_marginBottom="24dp" />

        <!-- Password Input -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Contraseña"
            android:textSize="16sp"
            android:textColor="@color/text_primary"
            android:layout_marginBottom="8dp" />

        <EditText
            android:id="@+id/etContrasenia"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="@drawable/edittext_background"
            android:hint="••••••••"
            android:textColor="@color/text_primary"
            android:textColorHint="@color/gray_dark"
            android:paddingHorizontal="16dp"
            android:textSize="16sp"
            android:inputType="textPassword"
            android:layout_marginBottom="8dp" />

        <!-- Forgot Password -->
        <TextView
            android:id="@+id/tv_olvidasteContrasenia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="¿Olvidaste tu contraseña?"
            android:textColor="@color/text_primary"
            android:textSize="14sp"
            android:layout_gravity="end"
            android:layout_marginBottom="32dp"
            android:clickable="true"
            android:focusable="true" />

        <!-- Login Button -->
        <Button
            android:id="@+id/btn_ingresar"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="Ingresar"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold"
            android:background="@drawable/button_green_rounded"
            android:layout_marginBottom="24dp" />

        <!-- Signup Text -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="¿No tienes cuenta?"
                android:textColor="@color/text_primary"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_registrar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Registrate"
                android:textColor="@color/green_primary"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_marginStart="4dp"
                android:clickable="true"
                android:focusable="true" />

        </LinearLayout>

    </LinearLayout>

</ScrollView>
