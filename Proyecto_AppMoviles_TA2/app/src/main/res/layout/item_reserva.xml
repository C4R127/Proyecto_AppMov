<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header con estado -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="12dp">

            <TextView
                android:id="@+id/tvReservaRestaurante"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Restaurante"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/text_primary" />

            <TextView
                android:id="@+id/tvReservaEstado"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CONFIRMADA"
                android:textSize="12sp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:background="@drawable/button_green_rounded"
                android:paddingHorizontal="12dp"
                android:paddingVertical="6dp" />
        </LinearLayout>

        <!-- Nombre del Cliente -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@android:drawable/ic_menu_my_calendar"
                android:layout_marginEnd="8dp"
                app:tint="@color/gray_dark" />

            <TextView
                android:id="@+id/tvReservaNombre"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Nombre del Cliente"
                android:textSize="14sp"
                android:textColor="@color/text_primary" />
        </LinearLayout>

        <!-- Fecha y Hora -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@android:drawable/ic_menu_recent_history"
                android:layout_marginEnd="8dp"
                app:tint="@color/gray_dark" />

            <TextView
                android:id="@+id/tvReservaFechaHora"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="21/10/2025 - 14:00 a 15:00"
                android:textSize="14sp"
                android:textColor="@color/text_secondary" />
        </LinearLayout>

        <!-- Mesa y Personas -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="12dp">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_restaurant_table"
                android:layout_marginEnd="8dp"
                app:tint="@color/gray_dark" />

            <TextView
                android:id="@+id/tvReservaMesaPersonas"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Mesa 3 - 4 personas"
                android:textSize="14sp"
                android:textColor="@color/text_secondary" />
        </LinearLayout>

        <!-- Botones de acciÃ³n -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="end">

            <Button
                android:id="@+id/btnEditarReserva"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="Editar"
                android:textSize="14sp"
                android:textColor="@color/white"
                android:background="@drawable/button_green_rounded"
                android:backgroundTint="#4CAF50"
                android:paddingHorizontal="16dp"
                android:layout_marginEnd="8dp" />

            <Button
                android:id="@+id/btnCancelarReserva"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="Cancelar"
                android:textSize="14sp"
                android:textColor="@color/white"
                android:background="@drawable/button_green_rounded"
                android:backgroundTint="#FF6B6B"
                android:paddingHorizontal="16dp" />
        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>
